<%layout("./layouts/boilerplate")%>
<body>
    <div class="row">
        <h1 class="col-6 offset-2">Create New Lisitng</h1>
        <div class="col-8 offset-2">
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control" required>
            <div class="valid-feedback">Title looks good</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" rows="5" cols="10" placeholder="Enter description" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <!-- <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="text" name="listing[image]" placeholder="enter image URL/Link" class="form-control" >
        </div> -->
        <div class="mb-3">
            <label for="image" class="form-label">upload Image</label>
            <input type="file" name="listing[image]" placeholder="Upload image " class="form-control" >
        </div>
        <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select name="listing[category]" class="form-control" required>
                <option disabled selected>Select a category</option>
                <option value="mountains">Mountains</option>
                <option value="artic">Arctic</option>
                <option value="farms">Farms</option>
                <option value="deserts">Deserts</option>
                <option value="pool">Pool</option>
                <option value="castles">Castles</option>
                <option value="beach">Beach</option>
                <option value="forest">Forest</option>
                <option value="camping">Camping</option>
                <option value="skiing">Skiing</option>
                <option value="countryside">Countryside</option>
                <option value="urban">Urban</option>
                <option value="historic">Historic</option>
                <option value="luxury">Luxury</option>
                <option value="treehouse">Treehouse</option>
                <option value="cabin">Cabin</option>
                <option value="tinyhome">Tiny Home</option>
                <option value="boat">Boat</option>
                <option value="wildlife">Wildlife</option>
                <option value="room">Room</option>
                <option value="iconic">Iconic</option>
                <option value="farm">Farm</option>
            </select>
        </div>
        <div class="row">
            <div class="mb-3 col-mid-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="1200" class="form-control" required>
                <div class="invalid-feedback">Please Enter a valid price</div>
            </div>
            <div class="mb-3 col-mid-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" placeholder="India" class="form-control" required>
                <div class="invalid-feedback">Country name should be valid</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" placeholder="Warangal" class="form-control" required>
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        <button class="btn btn-dark add-btn">Add</button>
    </form>
    </div>
    </div>
</body>